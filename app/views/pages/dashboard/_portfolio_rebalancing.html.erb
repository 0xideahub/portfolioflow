<div class="bg-container shadow-border-xs rounded-xl space-y-4 p-4" id="portfolio-rebalancing">
  <div class="flex items-center gap-2">
    <h2 class="text-lg font-medium inline-flex items-center gap-1.5">
      <span>Portfolio Rebalancing</span>
    </h2>
  </div>

  <div class="space-y-4">
    <!-- Current Allocation -->
    <div class="bg-surface rounded-lg p-4">
      <h3 class="text-sm font-medium text-primary mb-3">Current Allocation</h3>
      
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-blue-500"></div>
            <span class="text-sm text-secondary">Stocks</span>
          </div>
          <span class="text-sm font-medium text-primary">65%</span>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="text-sm text-secondary">Bonds</span>
          </div>
          <span class="text-sm font-medium text-primary">20%</span>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <span class="text-sm text-secondary">Cash</span>
          </div>
          <span class="text-sm font-medium text-primary">15%</span>
        </div>
      </div>
    </div>

    <!-- Target Allocation -->
    <div class="bg-surface rounded-lg p-4">
      <h3 class="text-sm font-medium text-primary mb-3">Target Allocation</h3>
      
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-blue-500"></div>
            <span class="text-sm text-secondary">Stocks</span>
          </div>
          <span class="text-sm font-medium text-primary">60%</span>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="text-sm text-secondary">Bonds</span>
          </div>
          <span class="text-sm font-medium text-primary">30%</span>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <span class="text-sm text-secondary">Cash</span>
          </div>
          <span class="text-sm font-medium text-primary">10%</span>
        </div>
      </div>
    </div>

    <!-- Rebalancing Actions -->
    <div class="bg-surface rounded-lg p-4">
      <h3 class="text-sm font-medium text-primary mb-3">Recommended Actions</h3>
      
      <div class="space-y-2">
        <div class="flex items-center justify-between text-sm">
          <span class="text-secondary">Reduce Stocks</span>
          <span class="text-primary font-medium">-5%</span>
        </div>
        
        <div class="flex items-center justify-between text-sm">
          <span class="text-secondary">Increase Bonds</span>
          <span class="text-primary font-medium">+10%</span>
        </div>
        
        <div class="flex items-center justify-between text-sm">
          <span class="text-secondary">Reduce Cash</span>
          <span class="text-primary font-medium">-5%</span>
        </div>
      </div>
    </div>
  </div>

  <div class="flex gap-2 pt-2">
    <%= render DS::Link.new(
      icon: "refresh-cw",
      text: "Rebalance Now",
      href: "#",
      variant: "primary",
      size: "sm"
    ) %>
    
    <%= render DS::Link.new(
      icon: "settings",
      text: "Customize",
      href: "#",
      variant: "secondary",
      size: "sm"
    ) %>
  </div>
</div> 