<div class="bg-container shadow-border-xs rounded-xl space-y-4 p-4" id="investment-goals">
  <div class="flex items-center gap-2">
    <h2 class="text-lg font-medium inline-flex items-center gap-1.5">
      <span>Investment Goals</span>
    </h2>
  </div>

  <div class="space-y-4">
    <!-- Emergency Fund Goal -->
    <div class="bg-surface rounded-lg p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <%= icon "shield", class: "text-primary" %>
          <div>
            <p class="text-sm font-medium text-primary">Emergency Fund</p>
            <p class="text-xs text-secondary">6 months of expenses</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-sm font-medium text-primary">$25,000</p>
          <p class="text-xs text-secondary">Target</p>
        </div>
      </div>
      
      <div class="w-full bg-gray-200 rounded-full h-2 mb-2">
        <div class="bg-primary h-2 rounded-full" style="width: 60%"></div>
      </div>
      <p class="text-xs text-secondary">60% complete</p>
    </div>

    <!-- Retirement Goal -->
    <div class="bg-surface rounded-lg p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <%= icon "target", class: "text-primary" %>
          <div>
            <p class="text-sm font-medium text-primary">Retirement Fund</p>
            <p class="text-xs text-secondary">Target by age 65</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-sm font-medium text-primary">$1,000,000</p>
          <p class="text-xs text-secondary">Target</p>
        </div>
      </div>
      
      <div class="w-full bg-gray-200 rounded-full h-2 mb-2">
        <div class="bg-primary h-2 rounded-full" style="width: 25%"></div>
      </div>
      <p class="text-xs text-secondary">25% complete</p>
    </div>

    <!-- Investment Property Goal -->
    <div class="bg-surface rounded-lg p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <%= icon "home", class: "text-primary" %>
          <div>
            <p class="text-sm font-medium text-primary">Investment Property</p>
            <p class="text-xs text-secondary">Down payment fund</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-sm font-medium text-primary">$100,000</p>
          <p class="text-xs text-secondary">Target</p>
        </div>
      </div>
      
      <div class="w-full bg-gray-200 rounded-full h-2 mb-2">
        <div class="bg-primary h-2 rounded-full" style="width: 15%"></div>
      </div>
      <p class="text-xs text-secondary">15% complete</p>
    </div>
  </div>

  <div class="pt-2">
    <%= render DS::Link.new(
      icon: "plus",
      text: "Add Goal",
      href: "#",
      variant: "secondary",
      size: "sm"
    ) %>
  </div>
</div> 