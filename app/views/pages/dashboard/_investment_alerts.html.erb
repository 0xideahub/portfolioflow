<div class="bg-container shadow-border-xs rounded-xl space-y-4 p-4" id="investment-alerts">
  <div class="flex items-center gap-2">
    <h2 class="text-lg font-medium inline-flex items-center gap-1.5">
      <span>Investment Alerts</span>
    </h2>
  </div>

  <div class="space-y-3">
    <!-- Performance Alert -->
    <div class="bg-surface rounded-lg p-3 border-l-4 border-green-500">
      <div class="flex items-start gap-3">
        <%= icon "trending-up", class: "text-green-500 mt-0.5" %>
        <div class="space-y-1">
          <p class="text-sm font-medium text-primary">Portfolio Up 5.2%</p>
          <p class="text-xs text-secondary">Your portfolio gained $12,450 this month</p>
          <p class="text-xs text-green-500">+5.2% vs last month</p>
        </div>
      </div>
    </div>

    <!-- Rebalancing Alert -->
    <div class="bg-surface rounded-lg p-3 border-l-4 border-yellow-500">
      <div class="flex items-start gap-3">
        <%= icon "refresh-cw", class: "text-yellow-500 mt-0.5" %>
        <div class="space-y-1">
          <p class="text-sm font-medium text-primary">Rebalancing Due</p>
          <p class="text-xs text-secondary">Your portfolio allocation has drifted from target</p>
          <p class="text-xs text-yellow-500">Stocks: 65% (target: 60%)</p>
        </div>
      </div>
    </div>

    <!-- Goal Progress Alert -->
    <div class="bg-surface rounded-lg p-3 border-l-4 border-blue-500">
      <div class="flex items-start gap-3">
        <%= icon "target", class: "text-blue-500 mt-0.5" %>
        <div class="space-y-1">
          <p class="text-sm font-medium text-primary">Emergency Fund Goal</p>
          <p class="text-xs text-secondary">You're 60% to your $25,000 emergency fund goal</p>
          <p class="text-xs text-blue-500">$15,000 of $25,000</p>
        </div>
      </div>
    </div>

    <!-- Market Alert -->
    <div class="bg-surface rounded-lg p-3 border-l-4 border-purple-500">
      <div class="flex items-start gap-3">
        <%= icon "activity", class: "text-purple-500 mt-0.5" %>
        <div class="space-y-1">
          <p class="text-sm font-medium text-primary">Market Update</p>
          <p class="text-xs text-secondary">S&P 500 up 2.1% today</p>
          <p class="text-xs text-purple-500">Your stocks may be affected</p>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-2">
    <%= render DS::Link.new(
      icon: "settings",
      text: "Manage Alerts",
      href: "#",
      variant: "secondary",
      size: "sm"
    ) %>
  </div>
</div> 