<% content_for :page_header do %>
  <div class="space-y-1 mb-6 flex gap-4 justify-between items-center lg:items-start">

    <div class="space-y-1">
      <h1 class="text-xl lg:text-3xl font-medium text-primary">Welcome back, <%= Current.user.first_name %></h1>
      <p class="text-sm lg:text-base text-secondary">Here's your investment portfolio overview</p>
    </div>

    <div class="hidden lg:flex gap-2">
      <%= render DS::Link.new(
        icon: "upload",
        text: "Import Data",
        href: new_import_path,
        frame: :modal,
        variant: "secondary"
      ) %>
      
      <%= render DS::Link.new(
        icon: "plus",
        text: "Add Investment",
        href: new_account_path,
        frame: :modal
      ) %>
    </div>

    <div class="flex lg:hidden gap-2">
      <%= render DS::Link.new(
        variant: "icon-inverse",
        icon: "upload",
        href: new_import_path,
        frame: :modal,
        class: "rounded-full"
      ) %>
      
      <%= render DS::Link.new(
        variant: "icon-inverse",
        icon: "plus",
        href: new_account_path,
        frame: :modal,
        class: "rounded-full"
      ) %>
    </div>
  </div>
<% end %>

<div class="w-full space-y-6 pb-24">
  <% if Current.family.accounts.any? %>
    <!-- Portfolio Performance Widget -->
    <section>
      <%= render "pages/dashboard/portfolio_performance", balance_sheet: @balance_sheet %>
    </section>

    <!-- Portfolio Performance Chart -->
    <section class="bg-container py-4 rounded-xl shadow-border-xs">
      <%= render partial: "pages/dashboard/portfolio_performance_chart", locals: {
        balance_sheet: @balance_sheet,
        period: @period
      } %>
    </section>

    <!-- Investment Goals and Rebalancing -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <section>
        <%= render "pages/dashboard/investment_goals" %>
      </section>
      
      <section>
        <%= render "pages/dashboard/portfolio_rebalancing" %>
      </section>
    </div>

    <!-- Investment Alerts -->
    <section>
      <%= render "pages/dashboard/investment_alerts" %>
    </section>

    <!-- Investment Tips -->
    <section>
      <%= render "pages/dashboard/investment_tips" %>
    </section>

    <section>
      <%= render "pages/dashboard/balance_sheet", balance_sheet: @balance_sheet %>
    </section>

    <%= turbo_frame_tag "cashflow_sankey_section" do %>
      <section class="bg-container py-4 rounded-xl shadow-border-xs">
        <%= render partial: "pages/dashboard/cashflow_sankey", locals: {
          sankey_data: @cashflow_sankey_data,
          period: @cashflow_period
        } %>
      </section>
    <% end %>
  <% else %>
    <section>
      <%= render "pages/dashboard/no_accounts_graph_placeholder" %>
    </section>
  <% end %>
</div>
